<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" /> 
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/register.css" />
    <title>register</title>
  </head>
  <body>

    <div class="register d-flex justify-content-center align-items-center">
      <div class="main d-flex flex-column p-3 pt-0">
         <div class='m-1 d-flex flex-row align-items-center m-1'>
           <img src="/images/brand.png" alt="brand" width="30" height="30" class="d-inline-block align-text-top me-1">
           <h3 class="text-dark text-center mt-3">BeezManager</h3>
         </div>  
    <h1 class='text-center'>Member login</h1>
          <form action="/auth/login" method="post">
            
            <div class="mb-3">
              <label for="Email" class="form-label">Email</label>
              <input type="email" class="form-control" name="email" />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password"/>
            </div>
            
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <div class='mt-3'>
          <p class=''>Not yet a Member? <a href='/auth/register'>Sign Up</a></p>
          </div>
      </div>
    </div>

    <!-- js setups -->

    <script src="/js/bootstrap.bundle.min.js"></script>
  </body>
</html>