<div class="">
  <h1 class="text-dark">
    Albums
    <a href="/albums/add" class="btn btn-success ms-auto">Add albums</a>
  </h1>
  <div class="row">
    <% albums.map((album, i) => {%>
    <div class="col-md-4">
      <a href="/albums/detail/<%= album.id  %> "
        ><h3><%= album.artist %></h3>
        <img
          src="data:<%= album.cover.contentType %>;base64,{<%= album.cover.data %>}"
          alt="album image"
      /></a>

      <h4><%= album.title %></h4>
      <p><%= album.artist %></p>
    </div>
    <% }) %>
  </div>
</div>