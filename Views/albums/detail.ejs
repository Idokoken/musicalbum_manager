<div>
  <a href="/albums" class="btn btn-primary">Go Back</a>
  <h1 class="text-white"><%= album.artist %> - <%= album.title %></h1>
  <div class="row">
    <div class="col-md-4">
      <img src="<%= album.cover %> " alt="<%= album.title %>" />
    </div>
    <div class="col-md-8">
      <ul class="list-group">
        <li class="list-group-item">
          <strong>Artist:</strong> <%= album.artist %>
        </li>
        <li class="list-group-item">
          <strong>Title:</strong> <%= album.title %>
        </li>
        <li class="list-group-item">
          <strong>Genre:</strong> <%= album.genre %>
        </li>
        <li class="list-group-item">
          <strong>Release year:</strong> <%= album.year %>
        </li>
        <li class="list-group-item">
          <strong>Label:</strong> <%= album.label %>
        </li>
        <li class="list-group-item">
          <strong>Tracks:</strong> <%= album.tracks %>
        </li>
      </ul>
    </div>
    <hr />
    <div class="row">
      <div class="col-md-12">
        <h4 class="text-white">Album info</h4>
        <p><%= album.info %></p>
      </div>
    </div>
    <hr />
    <span
      ><a href="/albums/edit/<%= album._id %> " class="mb-2 btn btn-info"
        >Edit</a
      ></span
    >
    <span
      ><a href="/albums/delete/<%= album._id %>" class="btn btn-danger"
        >Delete</a
      ></span
    >
  </div>
</div>